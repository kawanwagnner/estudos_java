package br.com.pagamento.sistema.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.pagamento.sistema.model.Pagamento;
import br.com.pagamento.sistema.service.repo.PagamentoRepository;

@Service
public class PagamentoServiceImpl {
	
	@Autowired
	private PagamentoRepository repo;
	
	// @Override
	public Pagamento salvarPagamento(Pagamento pagamento) {
		return repo.save(pagamento);
		
	}
	
	// @Override
	public List<Pagamento> buscarTodosPagamentos() {
		return repo.findAll();
	}

	// @Override
	public void buscarPagamentoUnico(Long id) {
		Optional<Pagamento> opt = repo.findById(id);
		if (opt.isPresent()) {
			return opt.get();
		} else {
			throw new PagamentoNotFoundException("O ID: " + " n√£o encontrado");
		}
	}
	
	// @Override
	public void deletarPagamento(Long id) {
		repo.delete(id);
	}
	
	
}
